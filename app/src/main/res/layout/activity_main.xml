<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
   >

    <TextView android:text="豆蔻电影主题餐厅" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvHeader"
        android:background="@color/title_green"
        android:textSize="22dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/white"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/ivPreview"
        android:background="@drawable/bg_preview_example"
        android:layout_below="@+id/tvHeader" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="推荐菜品"
        android:id="@+id/textView"
        android:layout_below="@+id/ivPreview"
        android:background="@color/color_listview_label_grey"
        android:padding="10dp" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:id="@+id/lv_recommend_dishes"
        android:layout_below="@+id/textView"
        android:choiceMode="none" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/lv_recommend_dishes"
        android:paddingTop="10dp"
        android:background="@color/color_listview_label_grey" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="推荐理由"
            android:id="@+id/textView3"
            android:padding="8dp"
            android:gravity="center_vertical" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/textView3"
            android:id="@+id/lv_recommend_reasons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新式菜品"
                android:id="@+id/textView4"
                android:layout_gravity="center"
                android:background="@color/color_recommend_yellow"
                android:padding="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新式菜品"
                android:id="@+id/textView5"
                android:layout_gravity="center"
                android:background="@color/color_recommend_yellow"
                android:padding="2dp"
                android:layout_margin="2dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/ivPreview"
        android:background="@color/bg_grey_transparent"
        android:id="@+id/relativeLayout">

        <TextView
            android:text="8.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRatingNumber"
            android:textColor="@color/white"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textSize="40dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_wrapper"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp">

            <TextView
                android:text="人均消费：82元/人"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAverage"
                android:textColor="@color/white"
                android:layout_above="@+id/tvRate" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="推荐指数："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRate"
                    android:textColor="@color/white"
                    android:layout_alignParentBottom="true" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_centerHorizontal="true"
                    android:rating="4.5"
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                    android:numStars="5"
                    android:nestedScrollingEnabled="false"
                    android:clickable="false"
                    android:stepSize="0.1"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ivYes"
            android:layout_weight="1"
            android:background="@color/color_bg_yes" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ivNo"
            android:layout_weight="1"
            android:background="@color/color_bg_no" />
    </LinearLayout>

</RelativeLayout>
