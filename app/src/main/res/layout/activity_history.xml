<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hackathon.dclab.com.minidianping.HistoryActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom|center_horizontal"
        android:id="@+id/ll_header_tab">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:text="历史" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvHistory"
                android:textSize="22dp"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp" />

            <TextView
                android:text="收藏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLike"
                android:textSize="22dp"
                android:padding="5dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/tvHistory" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rl_list_content"
        android:layout_below="@+id/ll_header_tab"></RelativeLayout>

</RelativeLayout>
